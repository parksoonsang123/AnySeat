<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/itemborder"
    android:orientation="vertical"
    android:padding="6dp">

    <TextView
        android:id="@+id/my_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textColor="#000000"
        android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_writetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="글쓴시간"
            android:textColor="#939393"
            android:textSize="10dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="right"
                android:layout_marginRight="4dp"
                android:background="@drawable/heart" />

            <TextView
                android:id="@+id/my_goodcnt"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="right"
                android:text="0"
                android:textColor="#F86363"
                android:textSize="10dp" />

            <Button
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="right"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/comment_btn" />

            <TextView
                android:id="@+id/my_commentcnt"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="right"
                android:text="0"
                android:textColor="#6DD2FF"
                android:textSize="10dp" />

            <Button
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="right"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/ic_baseline_image_24" />

            <TextView
                android:id="@+id/my_imagecnt"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="right"
                android:text="0"
                android:textColor="#FFEB3B"
                android:textSize="10dp" />

        </LinearLayout>





    </LinearLayout>



</LinearLayout>