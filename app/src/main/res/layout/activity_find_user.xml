<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FindUserActivity"
    android:background="#e4ebf9">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backbutton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic__backward"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17.5dp"
            android:layout_marginRight="42dp"
            android:text="회원 정보 찾기"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="25sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/emailfindinput"
            android:gravity="center"
            android:padding="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email 찾기"
                android:textColor="#000000"
                android:textSize="25dp"/>

            <EditText
                android:id="@+id/email_find_nameinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="이름을 입력하세요"
                android:textColorHint="#808080"
                android:textColor="#696969"/>

            <Button
                android:id="@+id/email_find_button"
                android:background="@drawable/emailfindbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email 찾기"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/emailfindinput"
            android:gravity="center"
            android:padding="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password 찾기"
                android:textColor="#000000"
                android:textSize="25dp"/>

            <EditText
                android:id="@+id/password_find_nameinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="이름을 입력하세요"
                android:textColorHint="#808080"
                android:textColor="#696969" />

            <EditText
                android:id="@+id/password_find_emailinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="이메일을 입력하세요"
                android:textColorHint="#808080"
                android:textColor="#696969" />

            <Button
                android:id="@+id/password_find_button"
                android:background="@drawable/emailfindbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password 찾기"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>